<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_datos_escuela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.DatosEscuela"
    android:background="@color/wallet_highlighted_text_holo_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="SEGUIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bSeguir"

            android:layout_marginBottom="10dp"
            android:layout_weight="0.99"
            android:background="@drawable/mybutton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/txAsunto"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textColor="@color/cast_expanded_controller_background_color" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txAsunto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <TextView
            android:text="Descripción:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="3.48"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <TextView
            android:text="sdsadfasdfsdafihjsdagkjlhsdakjflhaskfhdsfsahjssjshjhahfdjjahdhjhashflhjfahf"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/txDescripcion"
            android:textSize="16sp"
            android:textColor="@color/cast_intro_overlay_background_color" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:text="Dirección:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="1.09"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <TextView
            android:text="sdsadfasdfsdafihjsdagkjlhsdakjflhaskfhdsfsahjssjshjhahfdjjahdhjhashflhjfahf"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:id="@+id/txDireccion"
            android:textSize="16sp"
            android:textColor="@color/cast_intro_overlay_background_color" />
    </LinearLayout>

</LinearLayout>
