<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_highlighted_text_holo_dark"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/txAsunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/txxx"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Descripcion:"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txDescrip"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="asdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfsdafasdfasdfasdf"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textColor="@color/cast_intro_overlay_background_color" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="3.27"
            android:text="Fecha"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="6.89"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="@color/cast_intro_overlay_background_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_weight="0.00"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:layout_weight="0.04" />

        <TextView
            android:id="@+id/txPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="@color/cast_intro_overlay_background_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bApuntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:background="@drawable/mybutton"
            android:text="Apuntarme" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

</LinearLayout>